<MyScreenManager>:
    LoginScreen:
    SecondScreen:
        name: 'second_screen'

        BoxLayout:
            z: -1
            orientation: 'horizontal'
            spacing: 10
            size_hint: (1, 0.2)
            Button:
                size_hint: (.5, 1)
                z: -1
                text: '<<'
                on_press: app.root.get_screen('second_screen').load_image(-1)
            Widget:
                size_hint: (.5, 1)
            Button:
                size_hint: (.5, 1)
                text: '>>'
                on_press: app.root.get_screen('second_screen').load_image(1)

    ThirdScreen:

<LoginScreen>:
    name: 'login_screen'


<ThirdScreen>:
    name: 'third_screen'



<CustomBottomSheet@BoxLayout>:
    z:100
	size_hint_y: None
	height: '500dp'
	duration_opening: 0.8
	animation: True
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        MDTopAppBar:
            title: app.root.get_screen('login_screen').name_student
        Spinner:
            id: points
            text: 'Выберете балл'
            values: ['0','1', '2', '3', '4']

        TextInput:
            id: comment
            hint_text: 'Комментарий'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10


            Button:
                text: 'Одобрить'
                on_press: root.save_answer()

            Button:
                text: 'Принять'
                on_press: app.root.get_screen('second_screen').complete_job()




